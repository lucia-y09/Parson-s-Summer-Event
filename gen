<body>
  <h1>ðŸŽ² Random Prompt Generator</h1>
  <button onclick="generatePrompt()">Get a Prompt</button>
  <div id="prompt"></div>

  <script>
    const prompts = [
      "Write a story set in the year 3000.",
      "Draw your dream house.",
      "Describe your perfect day.",
      "Invent a new holiday.",
      "What if animals could talk?",
      // Add more prompts here
    ];

    function generatePrompt() {
      const random = prompts[Math.floor(Math.random() * prompts.length)];
      document.getElementById('prompt').innerText = random;
    }

    // Optionally show one immediately on load
    generatePrompt();
  </script>
